extends layout

block content
  .container
        .jumbotron
          .row
            .col.sm-6
              h1.display-4 Welcome!
            .col.sm-6
              img.rounded.mx-auto.w-25.float-right.mx-5(src='https://www.bostontechjam.com/wp-content/uploads/Spotify-Logo-1030x698.jpg', alt='...')
              img.rounded.w-25.float-right.mx-5(src='https://pbs.twimg.com/profile_images/789117657714831361/zGfknUu8_400x400.jpg', alt='...')
          h2.lead Type in the name of a movie to get the soundtrack and movie information
          hr.my-4
          form(action="/spotify/movie/" + access_token, method="get")
            label(for='title') Enter a movie name
            .input-group.mb-3
              .input-group-prepend
                span#basic-addon3.input-group-text Ex: Godzilla
              input#title.form-control(type='text', name="title", aria-describedby='basic-addon3')
            input.btn.btn-primary.btn-lg(type='submit', value='Search')

        h5.mb-4 previously searched films
        .scrollmenu
          each val in past_movies
              div
                h4 #{val.movie_name}
                img.w-50(src="" + val.movie_poster alt="movie poster")
                img.w-50(src="" + val.album_cover alt="album cover")

